@model IEnumerable<TotaMoviesRental.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<p>
    @Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary btn-lg" })
</p>

@if (!Model.Any())
{
    <p>There is no movies yet, start adding new movies by clicking on New Movie button.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
                {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                    <td>
                        @movie.Genre.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
